public class BookCtrl {

	Application_Service service;
	Application_PortType app;
	
	public BookCtrl(){
		this.service = new Application_ServiceLocator();
		try {
			this.app = service.getApplication();
		} catch (ServiceException e) {
			System.out.println("Erro ao criar servi√ßo: " + e.getMessage());
		}
	}
	
	public void addTitle(int isbn, String name, String author){
		Description d = new Description(isbn, name, author);
	}
	
}
